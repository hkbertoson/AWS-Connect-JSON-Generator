---
export interface Props {
	id?: string;
	name?: string;
	ariaLabel?: string;
	class?: string;
	required?: boolean;
}

const { id, name, ariaLabel, class: className = '', required = false } = Astro.props;

const baseClasses =
	'w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 bg-white';
const classes = `${baseClasses} ${className}`;
---

<div class="space-y-2">
	<label for={id} class="block text-sm font-medium text-gray-700">
		<slot name="label" />
	</label>
	<select id={id} name={name} aria-label={ariaLabel} class={classes} required={required}>
		<slot />
	</select>
</div>
